<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#090909"
    android:orientation="vertical"
    tools:context=".DanceInfo">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/download" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="195dp">

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/dance" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="174dp"
            android:layout_height="69dp"
            android:text="DANCE CLUB"
            android:textColor="#FCFDFD"
            android:textSize="30sp"
            android:textStyle="bold" />

    </TableRow>

    <TextView
        android:id="@+id/textView19"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:text="Faculty Coordinator: "
        android:textColor="@color/colorAccent"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/textView20"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:text="Student Coordinator: "
        android:textColor="@color/colorAccent"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/textView21"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:text="Dance Club organises a lot of events in an academic year and offers a lot of opportunities to the interested students"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/textView36"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:text="CREDITS OFFERED: 1 CREDIT"
        android:textColor="#03A9F4"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView37"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:text="CLUB REGISTERATION FEES: 200 RUPEES"
        android:textColor="#03A9F4"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="229dp"
        android:layout_height="58dp"
        android:layout_gravity="center"
        android:background="@drawable/button1"
        android:text="BACK"
        android:textStyle="bold"
        android:textSize="20sp"
        />


</LinearLayout>